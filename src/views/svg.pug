doctype html
html.bright(lang="la, de-DE, en-UK")
    include includes/head.pug
    //- 400 x 200
    body
        svg.infographic(xmlns="http://www.w3.org/2000/svg/", role="graphics-document", aria-roledescription="Bar Chart" aria-labelledby="title  desc")
            title#title Grafik zur Stundenübersicht
            desc#desc Und eine mehr oder weniger lange Beschreibung über das, was die Grafik beinhaltet und aussagt.
            g.chart-root(role="chart", aria-charttype="bar", transform="translate(50, 50)", tabindex="0")
                title(role="heading" aria-level="1") Zeit am Tag, die ich mit etwas Sinnvollem verbracht habe
                rect.backdrop(x="0", y="0", width="400", height="200")
                rect.chart-area(role="chartarea" x="0", y="0", width="400", height="200")
                g.x-scale(role="graphics-object", aria-label="x-axis" aria-labelledby="xAxis", tabindex="0")
                    title#xAxis(role="heading" ) Wochentage
                    g
                        line(x1="0",x2="400",y1="200",  y2="200")
                        text(x="400", y="230" text-anchor="end") Wochentage
                        g
                            line(x1=0, x2=0, y1=200, y2=210)
                            text(role="axislabel", x="50", y="212" text-anchor="middle") Montag
                        g
                            line(x1=100, x2=100, y1=200, y2=210)
                            text(role="axislabel", x="150", y="212" text-anchor="middle") Dienstag
                        g
                            line(x1=200, x2=200, y1=200, y2=210)
                            text(role="axislabel", x="250", y="212" text-anchor="middle") Mittwoch
                        g
                            line(x1=300, x2=300, y1=200, y2=210)
                            text(role="axislabel", x="350", y="212" text-anchor="middle") Donnerstag
                        g
                            line(x1=400, x2=400, y1=200, y2=210)
                

                g.y-scale(role="xaxis"  aria-valuemin="0" aria-valuemax="8", tabindex="0")
                    title() Stunden
                    g
                        line(x1="0", x2="0", y1="200", y2="200")
                        text(x="0", y="-30", text-anchor="end", alignment-baseline="top", transform="rotate(-90)") Stunden
                        g
                            line(x1=0, x2=-10, y1=40, y2=40)
                            text(role="axislabel", x="-15", y="40", text-anchor="middle", alignment-baseline="middle") 8
                        g
                            line(x1=0, x2=-10, y1=80, y2=80)
                            text(role="axislabel", x="-15", y="80", text-anchor="middle", alignment-baseline="middle") 6
                        g
                            line(x1=0, x2=-10, y1=120, y2=120)
                            text(role="axislabel", x="-15", y="120", text-anchor="middle", alignment-baseline="middle") 4
                        g
                            line(x1=0, x2=-10, y1=160, y2=160)
                            text(role="axislabel", x="-15", y="160", text-anchor="middle", alignment-baseline="middle") 2
                        g
                            line(x1=0, x2=-10, y1=200, y2=200)
                            text(role="axislabel", x="-15", y="200", text-anchor="middle", alignment-baseline="middle") 0

                g.dataset(role="dataset", tabindex="0")
                    g.datapoint(role="datapoint", tabindex="0")
                        title(role="datavalue" aria-labelledby="monday")
                        rect(x="10", y="80", width="80", height="120")
                        text(x="0", y="0", text-anchor="middle") 6
                    g.datapoint(role="datapoint", tabindex="0")
                        title(role="datavalue" aria-labelledby="tuesday")
                        rect(x="110", y="40", width="80", height="160")
                        text(x="0", y="0", text-anchor="middle") 8
                    g.datapoint(role="datapoint", tabindex="0")
                        title(role="datavalue" aria-labelledby="wednesday")
                        rect(x="210", y="100", width="80", height="100")
                        text(x="0", y="0", text-anchor="middle") 5
                    g.datapoint(role="datapoint", tabindex="0")
                        title(role="datavalue" aria-labelledby="thursday")
                        rect(x="310", y="120", width="80", height="80")
                        text(x="0", y="0", text-anchor="middle") 4
    footer
        address Michael